# GEO-SCOPE Frontend Environment Configuration
# Copy this file to .env.local and configure for your environment

# =============================================================================
# Application Mode
# =============================================================================
# Options: mock | develop | test | release
# - mock: All API calls return mock data (default)
# - develop: API calls to development backend with fallback to mock
# - test: API calls to test server (test.geo-scope.ai)
# - release: API calls to production backend, no fallback
VITE_APP_MODE=mock

# =============================================================================
# API URLs
# =============================================================================
# Development API server (used when VITE_APP_MODE=develop)
VITE_API_URL_DEV=http://localhost:8000

# Test API server (used when VITE_APP_MODE=test)
VITE_API_URL_TEST=https://dev.geo-scope.ai

# Production API server (used when VITE_APP_MODE=release)
VITE_API_URL_PROD=https://geo-scope.ai

# =============================================================================
# Release Server URLs (for updates and changelog)
# =============================================================================
# Development Release server
VITE_RELEASE_URL_DEV=http://localhost:8001

# Test Release server
VITE_RELEASE_URL_TEST=https://releases.geo-scope.ai

# Production Release server
VITE_RELEASE_URL_PROD=https://releases.geo-scope.ai

# =============================================================================
# Directory Paths (for Nginx proxy in test/release modes)
# =============================================================================
BACKEND_DIRECTORY=/api
RELEASE_DIRECTORY=/api

# =============================================================================
# Application Settings
# =============================================================================
# Application version
VITE_APP_VERSION=1.0.0
