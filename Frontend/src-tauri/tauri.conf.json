{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "GEO-SCOPE",
  "version": "0.1.0",
  "identifier": "com.easynet.GEO-SCOPE",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://releases.geo-scope.ai/api/update/check?target={{target}}&arch={{arch}}&version={{current_version}}&locale=en"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDkwRkY2NTNFOEI2NDc4NUYKUldSZmVHU0xQbVgva0lHNG0xMnYzWFZSK21TSHQ3eVk2TWVUYWoyOXIvbERudlBTVysyTExvK2cK"
    }
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "GEO-SCOPE - AI Observatory Platform",
        "width": 1400,
        "height": 900,
        "minWidth": 1200,
        "minHeight": 700,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "windows": ["main"],
          "permissions": [
            "core:default",
            "core:path:default",
            "core:event:allow-listen",
            "shell:allow-open",
            "dialog:allow-open",
            "dialog:allow-save",
            "dialog:allow-message",
            "dialog:allow-ask",
            "dialog:allow-confirm",
            "updater:default",
            "process:allow-restart",
            {
              "identifier": "fs:allow-read-file",
              "allow": [
                { "path": "$DOCUMENT/**" },
                { "path": "$HOME/**" },
                { "path": "$PICTURE/**" },
                { "path": "$DOWNLOAD/**" }
              ]
            },
            {
              "identifier": "fs:allow-read-dir",
              "allow": [
                { "path": "$DOCUMENT/**" },
                { "path": "$HOME/**" },
                { "path": "$PICTURE/**" },
                { "path": "$DOWNLOAD/**" }
              ]
            },
            {
              "identifier": "fs:allow-write-file",
              "allow": [
                { "path": "$DOCUMENT/**" },
                { "path": "$HOME/**" },
                { "path": "$PICTURE/**" },
                { "path": "$DOWNLOAD/**" }
              ]
            },
            {
              "identifier": "fs:allow-exists",
              "allow": [
                { "path": "$DOCUMENT/**" },
                { "path": "$HOME/**" },
                { "path": "$PICTURE/**" },
                { "path": "$DOWNLOAD/**" }
              ]
            },
            {
              "identifier": "fs:allow-read-text-file",
              "allow": [
                { "path": "$DOCUMENT/**" },
                { "path": "$HOME/**" },
                { "path": "$PICTURE/**" },
                { "path": "$DOWNLOAD/**" }
              ]
            },
            "fs:default"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "EASYNET Inc.",
    "copyright": "Â© 2025 EASYNET Inc.",
    "category": "Business",
    "shortDescription": "AI Observatory Platform",
    "longDescription": "GEO-SCOPE is an AI-powered observatory that tracks how generative engines surface and rank information. Measures visibility, bias, and ranking shifts across platforms.",
    "macOS": {
      "minimumSystemVersion": "11.0",
      "hardenedRuntime": true,
      "entitlements": "entitlements.plist"
    },
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      }
    }
  }
}
